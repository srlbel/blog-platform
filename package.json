{
  "name": "blog-platform",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_ENV=dev bun run --hot src/index.ts",
    "prod": "NODE_ENV=prod bun run src/index.ts",
    "test": "NODE_ENV=test bun test",
    "build": "NODE_ENV=prod DB_FILE_NAME=prod.db bun build src/index.ts --outdir ./build --target bun",
    "db:push": "NODE_ENV=dev drizzle-kit push",
    "db:push:test": "NODE_ENV=test drizzle-kit push",
    "db:push:prod": "NODE_ENV=prod drizzle-kit push",
    "lint": "bun eslint .",
    "lint:fix": "bun eslint . --fix",
    "format": "bun prettier --write \"**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@elysiajs/eden": "^1.2.0",
    "@elysiajs/swagger": "^1.2.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.42.0",
    "drizzle-typebox": "^0.3.2",
    "elysia": "^1.2.25",
    "logixlysia": "^4.2.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@types/bun": "^1.2.10",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.31.0"
  },
  "module": "src/index.ts",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
